/**
 * Chai Ledger: Security Rules Configuration
 * 
 * CORE PHILOSOPHY:
 * This ruleset enforces a strict User-Ownership model. Access to any data is strictly 
 * restricted to the authenticated user who owns that specific data branch.
 */

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- GLOBAL HELPER FUNCTIONS ---

    /** Checks if the request is from an authenticated user. */
    function isSignedIn() {
      return request.auth != null;
    }

    /** Checks if the authenticated user's UID matches the provided userId. */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- COLLECTION RULES ---

    /**
     * Rules for the root User profile and all its subcollections.
     * Users can only see and manage their own data branches.
     */
    match /users/{userId} {
      // Allow read/write for the user's own profile document
      allow read, write: if isOwner(userId);

      /** Product Catalog */
      match /products/{productId} {
        allow read, write: if isOwner(userId);
      }

      /** Business Expenses */
      match /expenses/{expenseId} {
        allow read, write: if isOwner(userId);
      }

      /** Sale Transactions and Line Items */
      match /transactions/{transactionId} {
        allow read, write: if isOwner(userId);

        match /saleItems/{itemId} {
          allow read, write: if isOwner(userId);
        }
      }
      
      /** Shop Settings (e.g., printer, profile) */
      match /settings/{settingId} {
        allow read, write: if isOwner(userId);
      }
      
      /** Discounts and Offers */
      match /discounts/{discountId} {
        allow read, write: if isOwner(userId);
      }
    }
  }
}